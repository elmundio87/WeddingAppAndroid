<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_password"
    tools:context="edtarawedding.elmund.io.taraandedswedding.Password"
    android:background="#000000">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="443dp"
        android:id="@+id/content_frame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/passwordButton">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Point the camera at your invitation and scan the barcode. "
        android:id="@+id/helpTextTop"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:shadowColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:maxLines="3"
        android:textSize="22dp"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        android:id="@+id/passwordButton"
        android:layout_gravity="bottom|left|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you don&apos;t have your invitation to hand, you can still type the password"
        android:id="@+id/helpTextBottom"
        android:layout_above="@+id/passwordButton"
        android:layout_alignLeft="@+id/content_frame"
        android:layout_alignStart="@+id/content_frame"
        android:shadowColor="#000000"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false" />

</RelativeLayout>
